<%= form_for :group, url: groups_path, method: :post, html: { class: "flex flex-col md:flex-row md:space-x-2 space-y-2 md:space-y-0" } do |f| %>
  <%= f.text_field :name, placeholder: "Group name", required: true, class: "shadow border border-gray-200 p-1 rounded focus:outline-none w-full md:w-1/2 sm:placeholder-sm" %>
  <%= f.submit "Create", class: "bg-green-900 text-white px-4 p-1 rounded shadow w-full md:w-1/2" %>
<% end %>
