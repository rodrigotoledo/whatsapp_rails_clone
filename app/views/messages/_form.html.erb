<%= form_with url: root_path, method: :post do |f| %>
  <%= f.hidden_field :receiver_id, value: receiver.id %>
  <%= f.hidden_field :receiver_type, value: receiver.class.name %>
  <%= f.text_field :content, placeholder: "Type your message...", required: true %>
  <%= f.submit "Send", class: "button" %>
<% end %>