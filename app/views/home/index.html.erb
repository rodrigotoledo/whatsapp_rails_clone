<% if @messages.present? %>
  <div class="message_box">
    <% @messages.each do |message| %>
      <p><strong><%= message.sender.email_address %>:</strong> <%= message.content %></p>
    <% end %>
  </div>

  <!-- FormulÃ¡rio para envio de mensagem -->
  <%= form_with url: messages_path, method: :post do |f| %>
    <%= f.hidden_field :chat_id, value: @chat_id %>
    <%= f.text_area :content, placeholder: "Your message..." %>
    <%= f.submit "Send", class: "button" %>
  <% end %>
<% else %>
  <h3>Nothing yet</h3>
<% end %>